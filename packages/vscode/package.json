{
  "private": true,
  "name": "gts-vscode",
  "version": "0.0.1",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/volarjs/starter.git",
    "directory": "packages/vscode"
  },
  "icon": "./assets/icon.webp",
  "categories": [
    "Programming Languages"
  ],
  "displayName": "GamingTS Language Features",
  "description": "GamingTS Language Features",
  "author": "Piovium Labs",
  "publisher": "Guyutongxue",
  "engines": {
    "vscode": "^1.82.0"
  },
  "activationEvents": [
    "onLanguage:gaming-ts"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gaming-ts",
        "aliases": [
          "GamingTS",
          "gaming-ts",
          "gts"
        ],
        "extensions": [
          ".gts"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./assets/file_type_gts.svg",
          "light": "./assets/file_type_gts.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "gaming-ts",
        "scopeName": "source.gts",
        "path": "./syntaxes/GamingTS.tmLanguage.json"
      }
    ],
    "typescriptServerPlugins": [
      {
        "name": "@gi-tcg/gts-typescript-language-service-plugin",
        "enableForWorkspaceTypeScriptVersions": true,
        "languages": []
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "tsconfig.json",
          "tsconfig.*.json",
          "tsconfig-*.json",
          "jsconfig.json",
          "jsconfig.*.json"
        ],
        "url": "./tsconfig-extra.schema.json"
      }
    ]
  },
  "scripts": {
    "build": "bun build --outdir=dist --target=node --format=cjs --external='vscode' --conditions='bun' src/server.ts src/extension.ts",
    "watch": "npm run build -- --watch",
    "pack": "npm run build && vsce package --pre-release",
    "release": "npm run build && vsce publish --pre-release"
  },
  "dependencies": {
    "@gi-tcg/gts-typescript-language-service-plugin": "workspace:*"
  },
  "devDependencies": {
    "@gi-tcg/gts-language-server": "workspace:*",
    "@types/vscode": "^1.82.0",
    "@volar/language-server": "~2.4.0",
    "@volar/vscode": "~2.4.0",
    "fast-plist": "^0.1.3",
    "vsce": "latest"
  }
}
