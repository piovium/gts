{
  "properties": {
    "gamingTs": {
      "title": "GamingTS language server options",
      "type": "object",
      "properties": {
        "runtimeImportSource": {
          "type": "string",
          "default": "@gi-tcg/gts-runtime"
        },
        "providerImportSource": {
          "type": "string",
          "default": "@gi-tcg/core/gts",
          "description": "Where to import semantic providers, including `rootVM`, `binder` and `query`."
        },
        "shortcutFunctionPreludes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "cryo", "hydro", "pyro", "electro", "anemo", "geo", "dendro", "omni"
          ],
          "description": "A list of identifier that will be declared inside shortcut function for direct use."
        },
        "queryBindings": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "my", "opp",
          ],
          "description": "A list of identifier that will be declared inside `query` function for direct use."
        }
      }
    }
  }
}
